
@{
    Layout = "~/Views/Shared/_JourneyHome.cshtml";
}
@section HeaderLeft{
    <h1 style="margin-top:35px;">Home</h1>
}

@section HeaderRight{
    <div class="btn-group pull-right">
        <a class="btn btn-default" href="~/journey/logs">Logs</a>
    </div>
}

<div data-journey-script="home" id="home" style="width:400px;">

    <div class="row" style="margin-bottom: 20px;">
        @Html.ActionLink("View some content with alerts for when items load...", "Content", null, new { @class = "btn btn-default" })
    </div>

    <div class="row" style="margin-bottom: 20px;">
        @Html.ActionLink("Editor with Submit", "Editor", null, new { @class = "btn btn-warning" })
    </div>

    <div class="row" style="margin-bottom: 20px;">
        <a class="btn btn-info" href="http://www.w3schools.com/">w3schools.com IFrame</a>
        <a class="btn btn-info" iframe-width="900px" href="http://www.w3schools.com/">w3schools.com IFrame with Width</a>
    </div>

    <div class="row" style="margin-bottom: 20px;">
        <button class="btn btn-info" onclick="journey.showPopout('notifications-content')">Open Notifications</button>
    </div>

    <div class="row" style="margin-bottom: 20px;">
        <a class="btn btn-default" href="/journey/logs?index=1|/journey/logs?index=2">Open two logs.</a>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            Menu width options
        </div>
        <div class="panel-body">
            <div class="form-group">
                <btn class="btn btn-default" onclick="document.location.href='/journey'">100 px wide</btn>
                <btn class="btn btn-default" onclick="document.location.href='/journey/index?width=50'">50 px wide</btn>
            </div>
        </div>
    </div>

</div>